//stylus引入外部css
@import "reset.css"
@import "mixins.styl"

//高亮显示，定义变量$
$maincolor = #02a774

//移动端禁止默认滚动条
html,body
  overflow-x hidden
#app
  width 100%
  height 100%
  .content
    //父元素relative
    position relative
    width 100%
    //之后用padding margin给footer空间
    height 100%
    //background-color pink
    header
      position relative
      width 100%
      height 40px
      background-color $maincolor
      .header-search
        .icon-sousuo
          position absolute
          top 8px
          left 16px
          font-size 25px
          color white
      .header-title
        position relative
        .header-title-text
          position absolute
          left 65px
          top 10px
          font-size 20px
          color white
          display block
          width 160px
        .ellipse
          display block
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
      .header-login
        clearFix()
        .header-login-text
          display block
          color white
          font-size 14px
          float right
          padding-right 12px
          padding-top 14px
          font-weight 300px
    section
      //定位四个屏幕：子元素absolute
      position absolute
      //定位后给方向，元素此时靠左上角
      top 40px
      left 0
      width 100%
      height 100%
      display none
      //父级引用，谁有on谁显示
      &.on
        display block
      .swiper-container
        height 200px
        //background-color antiquewhite
        //浮动（考虑ipad等）
        .swiper-slide
          height 180px
          //清除浮动 混合？？？
          clearFix()
          .slideItem
            float left
            width 25%
            height 50%
            a
              //a想用flex 要先交给flex
              display flex
              //水平居中
              justify-content: center
              //垂直居中
              align-items: center
              //换轴
              flex-direction: column
              img
                margin-top 10px
                width 50px
                height 50px
              .itemText
                margin-top 4px
                font-size 13px
      //改变小圆点的颜色
      .swiper-pagination-bullet-active
        //注意时背景色
        background-color $maincolor
    .shop
      border-top 10px solid #e4e4e4
      position absolute
      width 100%
      //height 400px
      //background-color #007aff
      .shop-header
        height 30px
        width 100%
        //background-color pink
        .icon-xuanxiang
          float left
          padding 8px 8px
          //width 20px
        .shop-header-title
          float left
          padding 8px 1px
          color #7e8c8d
      .shop-container
        .shop-list
          .shop-li
            height 105px
            width 100%
            //background-color pink
            border-bottom 1px solid gainsboro
            position relative
            a
              display block
              width 100%
              height 105px
            .shop-left
              position absolute
              top 10px
              left 10px
              img
                width 60px
                height 75px
            .shop-right
              margin 10px 10px
              float right
              width 234px
              height 80px
              .shop-detail-top
                position relative
                .shop-title
                  margin-left 32px
                  float left
                  width 140px
                  height 17px
                  font-size 17px
                  font-weight bold
                  color black
                .ellipse
                  display block
                  white-space nowrap
                  overflow hidden
                  text-overflow ellipsis
                .shop-detail-ul
                  margin 3px 0
                  float right
                  width 48px
                  height 12px
                  .shop-detail-li
                    border-radius 2px
                    padding 0 2px
                    float left
                    border 1px solid gainsboro
                    font-size 10px
                .shop-detail-span
                  position absolute
                  top 1px
                  left 0
                  font-size 11px
                  font-weight bold
                  width 23px
                  height 12px
                  background-color yellow
                  padding 2px


              .shop-detail-middle
                width 100%
                height 15px
                //background-color yellow
                margin 20px 0 8px 0
                .shop-detail-middle-right
                  position relative
                  .span-zhuansong
                    position absolute
                    top 0
                    right 35px
                    display block
                    height 10px
                    width 40px
                    font-size 5px
                    color white
                    background-color $maincolor
                    border-radius 2px
                    border 1px solid $maincolor
                  .span-zhunshi
                    position absolute
                    top 0
                    right 0
                    display block
                    height 10px
                    width 30px
                    font-size 5px
                    color $maincolor
                    border 1px solid $maincolor
                    background-color white
                    border-radius 2px

              .shop-detail-bottom
                font-size 12px
  .footer
    background-color white
    padding-top 2px
    //给footer加上边框
    top-border-1px(#ddd)
    //footer永远停留在页面最下方，固定定位fixed
    position fixed
    bottom 0
    left 0
    width 100%
    //height此时要给固定高度
    height 50px
    //background-color antiquewhite
    //footer此时想平铺在下面，每个占25%；
    // flex布局：快速布局；footer用flex，先把footer变成伸缩盒模型
    display flex
    .footerItem
    //footerItem平均占份
      flex 1
      //图标和字体想在a：footerItem里居中，首先要变成flex
      display flex
      //居中
      justify-content center
      //字要竖轴，换轴
      flex-direction column
      //竖轴居中
      align-items center
      //接下来：给字体图标设置大小
      .iconfont
        font-size 22px
      //字体图标同级字体设置大小
      .itemText
        13px
        //调两者间距
        margin 3px 0
      //a并且active高亮显示
      &.active
        color #02a774



